<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.ldb.bin.firstdayfresher.InfoFilm">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:background="#b11167a4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#9f7b95ed">

                <TextView
                    android:id="@+id/txtbar_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Miễn Phí"
                    android:textSize="25sp"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:id="@+id/cencelview"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/x"
                    />
            </android.support.v7.widget.Toolbar>

            <VideoView
                android:id="@+id/videoview"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#ba454541"/>

            <RelativeLayout
                android:id="@+id/listview_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/txttitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    />
                <TextView
                    android:id="@+id/classification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txttitle"
                    android:paddingLeft="15dp"
                    />
                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/classification"
                    android:paddingLeft="15dp"
                    />
                <TextView
                    android:paddingTop="10dp"
                    android:text="Thể loại"
                    android:id="@+id/texttl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/description"
                    android:paddingLeft="15dp"/>
                <TextView
                    android:id="@+id/genres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/texttl"
                    android:paddingLeft="15dp"
                    />
                <TextView
                    android:paddingTop="10dp"
                    android:text="Đoàn làm phim"
                    android:id="@+id/textactor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/genres"
                    android:paddingLeft="15dp"
                    />
                <TextView
                    android:id="@+id/actors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textactor"
                    android:paddingLeft="15dp"
                    />
                <TextView
                    android:paddingTop="10dp"
                    android:text="Ngôn ngữ"
                    android:id="@+id/textlanguage"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/actors"/>
                <TextView
                    android:id="@+id/language"
                    android:layout_below="@id/textlanguage"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <android.support.v7.widget.Toolbar
                    android:layout_below="@id/language"
                    android:id="@+id/bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="Trailer"
                            android:paddingLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:text="Yêu thích"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:paddingRight="5dp"
                        >
                        <ImageView
                            android:id="@+id/share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:layout_below="@id/share"
                            android:text="Chia sẽ"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </RelativeLayout>
                </android.support.v7.widget.Toolbar>
                <TextView
                    android:paddingTop="5dp"
                    android:paddingLeft="15dp"
                    android:layout_below="@id/bar"
                    android:id="@+id/epi"
                    android:text="Tập"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_below="@id/epi"
                    android:id="@+id/linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_set"
                    >
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycleview_ep"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:paddingLeft="5dp"
                android:text="Liên quan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.RecyclerView
                android:paddingLeft="5dp"
                android:id="@+id/recycleview_related"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </ScrollView>
</android.support.v4.widget.DrawerLayout>
